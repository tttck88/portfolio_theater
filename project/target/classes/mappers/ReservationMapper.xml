<mapper namespace="com.spring.mapper.ReservationMapper">

	<select id="getList_sch" resultType="com.spring.domain.ReservationVO">
		select * from reservation
		where sch_id = #{sch_id}
	</select>
	
	<select id="getList_user" resultType="com.spring.domain.ReservationVO">
		select * from reservation
		where username = #{username}
	</select>

	<insert id="insertRes">
	<![CDATA[
		INSERT INTO RESERVATION (R_ID,USERNAME,SCH_ID,SEAT_ROW,SEAT_COL,R_DATE)
		VALUES ((SELECT NVL(MAX(R_ID),0)+1 FROM RESERVATION), #{username}, #{sch_id}, #{seat_row}, #{seat_col}, #{r_date}) 
	]]>
	</insert>

